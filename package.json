{
  "name": "setting-toggle",
  "displayName": "Setting Toggle",
  "description": "Toggle vs-code settings using a button or commands.",
  "icon": "images/T-icon.png",
  "version": "1.1.1",
  "publisher": "Ho-Wan",
  "author": {
    "name": "Ho-Wan To",
    "url": "http://www.howanto.com/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Ho-Wan/vscode-setting-toggle"
  },
  "bugs": "https://github.com/Ho-Wan/vscode-setting-toggle/issues",
  "engines": {
    "vscode": "^1.24.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "settings",
    "toggle",
    "button",
    "codeLens"
  ],
  "activationEvents": [
    "onCommand:extension.toggle",
    "onCommand:extension.toggle_s1",
    "onCommand:extension.toggle_s2"
  ],
  "main": "./out/extension",
  "contributes": {
    "commands": [{
        "command": "extension.toggle",
        "title": "Setting Toggle",
        "icon": {
          "light": "./images/T-L.png",
          "dark": "./images/T-D.png"
        }
      },
      {
        "command": "extension.toggle_s1",
        "title": "Setting 1 Toggle"
      },
      {
        "command": "extension.toggle_s2",
        "title": "Setting 2 Toggle"
      }
    ],
    "menus": {
      "commandPalette": [{
        "when": "config.toggle.setting1.enabled",
        "command": "extension.toggle_s1"
      },
      {
        "when": "config.toggle.setting2.enabled",
        "command": "extension.toggle_s2"
      }],
      "editor/title": [{
        "when": "config.toggle.icon.enabled",
        "command": "extension.toggle",
        "group": "navigation@-1"
      }]
    },
    "configuration": {
      "type": "object",
      "title": "Setting Toggle",
      "properties": {
        "toggle.setting.title": {
          "type": "string",
          "default": "editor.codeLens",
          "description": "name of primary setting for toggle",
          "scope": "resource"
        },
        "toggle.setting.state1": {
          "default": "state1",
          "description": "string representating state1, eg. \"on\"",
          "scope": "resource"
        },
        "toggle.setting.state2": {
          "default": "state2",
          "description": "string representing state2, eg. \"off\"",
          "scope": "resource"
        },
        "toggle.setting1.title": {
          "type": "string",
          "default": "",
          "description": "name of setting 1 for togggle",
          "scope": "resource"
        },
        "toggle.setting2.title": {
          "type": "string",
          "default": "",
          "description": "name of setting 2 for togggle",
          "scope": "resource"
        },
        "toggle.setting1.enabled": {
          "type": "boolean",
          "default": true,
          "description": "enables setting 1",
          "scope": "resource"
        },
        "toggle.setting2.enabled": {
          "type": "boolean",
          "default": true,
          "description": "enables setting 2",
          "scope": "resource"
        },
        "toggle.icon.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Show Setting Toggle icon",
          "scope": "resource"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run compile && node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "typescript": "^2.6.1",
    "vscode": "^1.1.6",
    "@types/node": "^7.0.43",
    "@types/mocha": "^2.2.42"
  }
}
